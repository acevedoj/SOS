<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Priority Setting">
        <ListPreference
                android:key="call_preference"
                android:title="Call Priority"
                android:defaultValue="1"
                android:entries="@array/callPriorities"
                android:entryValues="@array/callPrioritiesAlias"/>
        <ListPreference
                android:key="text_preference"
                android:title="Text Priority"
                android:defaultValue="1"
                android:entries="@array/textPriorities"
                android:entryValues="@array/textPrioritiesAlias"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Contact Information">
        <EditTextPreference
                android:key="primary_contact_text"
                android:title="Primary Contact Number"
        />
        <EditTextPreference
                android:key="secondary_contact_text"
                android:title="Secondary Contact Number"
        />
        <EditTextPreference
                android:key="tertiary_contact_text"
                android:title="Tertiary Contact Number"
        />
    </PreferenceCategory>
</PreferenceScreen>